<config>
    <sections>
        <general translate="label" module="USDisableRegions">
            <groups>
                <enabled_regions translate="label">
                    <label>Enabled USA regions</label>
                    <comment>
                      Shipping will be restricted to only the highlighted regions. 
                      <![CDATA[<br />]]>
                      Hold CTRL/Command to select multiple regions, or to deselect a region
                    </comment>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <region translate="label">
                            <frontend_type>multiselect</frontend_type>
                            <source_model>USDisableRegions/adminhtml_system_config_source_region</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </region>
                    </fields>
                </enabled_regions>
            </groups>
        </general>
    </sections>
</config>
